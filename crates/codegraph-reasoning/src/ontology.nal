// Common Component-Attribute Combinations
// ============================================

<(button * [primary]) --> common_combination>. {1.0|0.85}
<(button * [secondary]) --> common_combination>. {1.0|0.85}
<(button * [loading]) --> common_combination>. {1.0|0.80}
<(form * [responsive]) --> common_combination>. {1.0|0.90}
<(modal * [animated]) --> common_combination>. {1.0|0.90}
<(navbar * [responsive]) --> common_combination>. {1.0|0.95}
